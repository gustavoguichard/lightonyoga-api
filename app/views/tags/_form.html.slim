= form_for @tag do |f|
  - if @tag.errors.any?
    #error_explanation
      h2 = "#{pluralize(@tag.errors.count, "error")} prohibited this tag from being saved:"
      ul
        - @tag.errors.full_messages.each do |message|
          li = message

  p.flex.flex-col
    = f.label :name, "Nome"
    = f.text_field :name
  p.flex.flex-col
    = f.label :category, "Categoria"
    = f.select :category, collection: Tag.categories.keys.to_a
  p.flex.flex-col
    = f.label :content, 'Conte√∫do'
    = f.rich_text_area :content

  .actions = f.submit 'Salvar'
